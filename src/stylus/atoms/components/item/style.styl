.item {
  margin-bottom: 4px;
  padding: 8px;
  width: 180px;
  border-bottom: 3px solid;
  border-radius: 5px;
  background-color: #fff;

  &.item-m {
    width: (180 + 4 + 180)px;
  }

  &.item-l {
    width: ((180 + 4 + 180) + 4 + (180 + 4 + 180))px;
  }

  &.item-maindish {
    border-color: #ffc0cb;

    & .categoty {
      &::before {
        border-color: #ffc0cb;
      }
    }
  }

  &.item-appetizer {
    border-color: #76c047;

    & .categoty {
      &::before {
        border-color: #76c047;
      }
    }
  }

  &.item-column {
    border-color: #fff100;

    & .categoty {
      &::before {
        border-color: #fff100;
      }
    }
  }

  &.item-breaktime {
    border-color: #c1efff;

    & .categoty {
      &::before {
        border-color: #c1efff;
      }
    }
  }

  & .category {
    margin: 15px 9px 10px;
    color: #aaa;
    letter-spacing: 1px;
    font-family: 'Trebuchet MS', 'Hiragino Kaku Gothic ProN', Meiryo, sans-serif;

    &::before {
      display: inline-block;
      margin-right: 5px;
      width: 19px;
      height: 19px;
      border: 2px solid;
      border-radius: 50%;
      content: '';
      vertical-align: -5px;
    }
  }

  & .description {
    margin: 10px;
    line-height: 1.5;
  }

  & .image {
    display: block;
    width: 100%;
  }

  & > a {
    display: block;
    margin: -8px -8px -11px;
    padding: 8px 8px 11px;
    border-radius: inherit;
    color: #777;
    transition: all 0.3s;

    &:hover {
      box-shadow: 0 0 6px -1px rgba(0, 0, 0, 0.3);
      opacity: 0.8;
    }
  }
}
